%main.container
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.active
      %span.step-number 1
      %span.step-text.hidden-xs Address
    %li.step-divider
    %li.step
      %span.step-number 2
      %span.step-text.hidden-xs Delivery
    %li.step-divider
    %li.step
      %span.step-number 3
      %span.step-text.hidden-xs Payment
    %li.step-divider
    %li.step
      %span.step-number 4
      %span.step-text.hidden-xs Confirm
    %li.step-divider
    %li.step
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  = form_tag(wizard_path, method: :put) do
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .form-group
          %label.control-label.font-weight-light{for: "firstName"} First Name
          = text_field_tag "billing[first_name]", "", placeholder: "First Name", id: "firstName", class: "form-control"
          %span.help-block 
        .form-group
          %label.control-label.font-weight-light{for: "lastName"} Last Name
          = text_field_tag "billing[last_name]", "", placeholder: "Last Name", id: "lastName", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "address"} Address
          = text_field_tag "billing[address_name]", "", placeholder: "Address", id: "address", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "city"} City
          = text_field_tag "billing[city]", "", id: "city", placeholder: "City", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "zip"} Zip
          = text_field_tag "billing[zip]", "", id: "zip", placeholder: "Zip", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "сountry"} Country
          = select_tag "billing[country]", options_for_select(["Ukraine", "USA", "Zimbabwe"]), id: "country", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "phone"} Phone
          = text_field_tag "billing[phone]", "", placeholder: "Example +355 66 123 4567", id: "phone", class: "form-control"
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle Shipping Address
        .form-group
          %label.control-label.font-weight-light{for: "firstName"} First Name
          = text_field_tag "shipping[first_name]", "", placeholder: "First Name", id: "firstName", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "lastName"} Last Name
          = text_field_tag "shipping[last_name]", "", placeholder: "Last Name", id: "lastName", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "address"} Address
          = text_field_tag "shipping[address_name]", "", placeholder: "Address", id: "address", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "city"} City
          = text_field_tag "shipping[city]", "", id: "city", placeholder: "City", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "zip"} Zip
          = text_field_tag "shipping[zip]", "", id: "zip", placeholder: "Zip", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "сountry"} Country
          = select_tag "shipping[country]", options_for_select(["Ukraine", "USA", "Zimbabwe"]), id: "country", class: "form-control"
        .form-group
          %label.control-label.font-weight-light{for: "phone"} Phone
          = text_field_tag "shipping[phone]", "", placeholder: "Example +355 66 123 4567", id: "phone", class: "form-control"
        .form-group.checkbox
          %label.font-weight-light.pl-0
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16= number_to_currency(current_order.subtotal, unit: '€')
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16= number_to_currency(current_order.subtotal, unit: '€')
      = submit_tag "Save and Continue", method: :put, class: "btn btn-default center-block mb-20"